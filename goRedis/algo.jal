end function

-- main bucle: encinde en intermitente
alias  led       is pin_A0
pin_A0_direction = OUTPUT

forever loop
    NCO1CON_N1OE = 1
    led = ON
    delayBase(20)
    -- _usec_delay(100_000)
    NCO1CON_N1OE = 0
    led = OFF
    delayBase(20)
    -- _usec_delay(400_000)
end loop

procedure wait05ms() is
    INTCON_TMR0IE = 0
    OPTION_REG_TMR0CS = 0
    OPTION_REG_PSA = 0
    OPTION_REG_PS = 0b111
    TMR0 = 248
    INTCON_TMR0IF = 0
    while (INTCON_TMR0IF==0) loop
    end loop
end procedure


